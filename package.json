{
    "name": "safe-ds",
    "private": true,
    "prettier": "@lars-reimann/prettier-config",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "langium:generate": "npm run langium:generate -w=safe-ds",
        "build": "tsc -b tsconfig.json && npm run build -w=safe-ds",
        "watch": "concurrently -n tsc,vscode -c blue,yellow \"tsc -b tsconfig.json\" \"npm run watch -w=safe-ds\"",
        "clean": "shx rm -rf packages/*/dist packages/*/lib packages/*/*.tsbuildinfo",
        "build:clean": "npm run clean && npm run build",
        "test": "vitest",
        "test-with-coverage": "vitest --coverage",
        "test-ui": "vitest --ui --coverage"
    },
    "devDependencies": {
        "@lars-reimann/eslint-config": "^5.1.4",
        "@lars-reimann/prettier-config": "^5.0.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^18.18.6",
        "@vitest/coverage-v8": "^0.34.6",
        "@vitest/ui": "^0.34.6",
        "concurrently": "^8.2.2",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "esbuild": "^0.19.5",
        "esbuild-plugin-copy": "^2.1.1",
        "semantic-release": "^22.0.5",
        "semantic-release-vsce": "^5.6.3",
        "shx": "^0.3.4",
        "typescript": "^5.2.2",
        "vitest": "^0.34.6"
    }
}
