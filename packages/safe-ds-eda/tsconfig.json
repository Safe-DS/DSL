{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "typeRoots" : ["./node_modules/@types","./declarations.d.ts","./globals.d.ts"]
  },
  "include": ["src/**/*.d.ts","./*.d.ts","src/*.ts","src/**/*.ts", "src/**/*.js", "src/**/*.svelte","declarations.d.ts","globals.d.ts","../../types","./*.d.ts","*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
