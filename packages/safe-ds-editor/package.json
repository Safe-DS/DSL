{
    "name": "@safe-ds/custom-editor",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "watch": "concurrently -n Vite,Nodemon -c blue,red \"vite build --watch\" \"npx nodemon --quiet --watch dist devtools/copyToExtension.js\"",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "clean": "shx rm -rf dist",
        "build:clean": "npm run clean && npm run build",
        "copyToExtension": "node devtools/copyToExtension.js"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.0.2",
        "@tsconfig/svelte": "^5.0.2",
        "autoprefixer": "^10.4.17",
        "concurrently": "^8.2.2",
        "fs-extra": "^11.2.0",
        "nodemon": "^3.0.3",
        "postcss": "^8.4.33",
        "svelte": "^4.2.9",
        "svelte-check": "^3.6.3",
        "svelte-preprocess": "^5.1.3",
        "svelte-svg": "^0.0.7",
        "tailwindcss": "^3.4.1",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    }
}
