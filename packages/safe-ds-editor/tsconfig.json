{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": false,
        "checkJs": false,
        "paths": {
            "$lib/*": ["src/lib/*"],
            "$vscode/*": ["../safe-ds-vscode/src/extension/custom-editor/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte",
        "types/**/*.d.ts",
        "src/lib/components/nodes/utils.tsx"
    ]
}
