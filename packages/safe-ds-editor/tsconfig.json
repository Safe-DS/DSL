{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": false,
        "checkJs": false,
        "paths": {
            "$/*": ["./*"],
            "$src/*": ["./src/*"],
            "$assets/*": ["./src/assets/*"],
            "$pages/*": ["./src/pages/*"],
            "$global": ["../safe-ds-lang/src/language/custom-editor/global.ts"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.svelte", "types/**/*.d.ts"]
}
