{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": false,
        "checkJs": false,
        "verbatimModuleSyntax": false,
        "paths": {
            "$pages/*": ["./src/pages/*"],
            "$global": ["../safe-ds-lang/src/language/custom-editor/global.ts"]
        }
    },
    "include": ["src/main.ts", "src/**/*.{ts,svelte,tsx}", "types/**/*.d.ts"]
}
