{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "references": [{ "path": "../safe-ds-lang/tsconfig.src.json" }],
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": false,
        "checkJs": false,
        "paths": {
            "$/*": ["./*"],
            "$src/*": ["./src/*"],
            "$assets/*": ["./src/assets/*"],
            "$pages/*": ["./src/pages/*"],
            "$global": ["../safe-ds-lang/src/language/graphical-editor/global.ts"]
        }
    },
    "include": ["**/*.ts", "src/**/*.svelte", "types/**/*.d.ts"]
}
